@model Sobremesa.Models.Usuario

@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-4">
    <h1>Delete User</h1>
    <p>Are you sure you want to delete this user?</p>

    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Correo</dd>

        <dt class="col-sm-2">Role</dt>
        <dd class="col-sm-10">@Model.Rol</dd>
    </dl>

    <form asp-controller="Users" asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.UsuarioID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Users" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>