@{
    ViewData["Title"] = "Worker Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar Menu -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
            <div class="position-sticky">
                <ul class="nav flex-column mt-3">
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="WorkerDashboard" asp-action="Index">
                            <i class="fas fa-home"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Inventory" asp-action="Index">
                            <i class="fas fa-boxes"></i> Inventory
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Sales" asp-action="Index">
                            <i class="fas fa-cash-register"></i> Sales
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Welcome, @ViewBag.UserName!</h1>
                <p class="lead">You have worker-level access.</p>
            </div>

            <div class="row">
                <!-- Example Summary Cards -->
                <div class="col-md-6">
                    <div class="card text-white bg-primary mb-3">
                        <div class="card-header">Today's Sales</div>
                        <div class="card-body">
                            <h5 class="card-title">Sales Total: $500.00</h5>
                            <a asp-controller="Sales" asp-action="Index" class="btn btn-light">Manage Sales</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card text-white bg-warning mb-3">
                        <div class="card-header">Inventory</div>
                        <div class="card-body">
                            <h5 class="card-title">Update Stock</h5>
                            <a asp-controller="Inventory" asp-action="Index" class="btn btn-light">Manage Inventory</a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>